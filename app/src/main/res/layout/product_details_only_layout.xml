<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_details_container"
    android:background="@color/colorAccent"
    android:elevation="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/product_details_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#d4d4d4"
        android:padding="16dp"
        android:text="Product Details"
        android:textColor="#9c9c9c"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_details_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="এবার আপনার নিজের ইমেইল আইডি টাইপ করুন, লক্ষ্য করুন আপনার ইমেইল আইডি টাইপ শেষ করার সাথে সাথে ডান Success লেখা এসেছে এবার ব্রাউজারের জন্য ট্যাবে আপনার ইমেইল আইডিতে লগইন করেন দেখুন GP eCare থেকে Email Verification Code কোড পাঠানো হয়েছে কোডটা কপি করে জিপির রেজিঃ পাতায় ফেরত যান।
এবার আপনার নিজের ইমেইল আইডি টাইপ করুন, লক্ষ্য করুন আপনার ইমেইল আইডি টাইপ শেষ করার সাথে সাথে ডান Success লেখা এসেছে এবার ব্রাউজারের জন্য ট্যাবে আপনার ইমেইল আইডিতে লগইন করেন দেখুন GP eCare থেকে Email Verification Code কোড পাঠানো হয়েছে কোডটা কপি করে জিপির রেজিঃ পাতায় ফেরত যান।"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_details_title" />
</androidx.constraintlayout.widget.ConstraintLayout>